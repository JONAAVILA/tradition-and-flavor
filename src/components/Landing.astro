---
import Networks from "./Networks.astro";


---
<main>
	<header>
		<div class="heading" >
			<h1>TRADICION Y SABOR</h1>
			<span/>
		</div>
		<div class="sub_heading" >
			<span/>
			<h2>RITUALES QUE PERDURAN EN EL TIEMPO</h2>
		</div>
	</header>
	<div class="box_aside" >
		<Networks/>
	</div>
</main>

<style>
	main{
		position: relative;
		display: flex;
		gap: 40px;
	}
	header{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: left;
		color: var(--segundary-color);
		height: 300px;
		width: 1100px;
		border-radius: 10px;
		padding-right: 10px;
	}
	.heading{
		display: flex;
		justify-content: left;
		align-items: center;
		width: 100%;
		gap: 10px;
	}
	.sub_heading{
		display: flex;
		align-items: center;
		justify-content: right;
		width: 100%;
		gap: 10px;
	}
	span{
		height: 2px;
		width: 150px;
		background-color: var(--grey-color);
	}
	.box_aside{
		border-radius: 10px;
	}
</style>