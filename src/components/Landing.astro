---
import Networks from "./Networks.astro";


---
<main>
	<div>
		<header>
			<div class="heading" >
				<h1>TRADICION Y SABOR</h1>
				<span/>
			</div>
			<div class="sub_heading" >
				<span/>
				<h2>RITUALES QUE PERDURAN EN EL TIEMPO</h2>
			</div>
		</header>
		<div class="container_herbs" >
			<div class="box_herbs" >
				<img class="herbs" src="images/tipos-de-yerbas-tradicion-y-sabor.webp" alt="">
				<h3 class="herbs_tittle" >DESCRUBRÃ­ NUESTRO SABORES</h3>
			</div>
		</div>
	</div>
	<Networks/>
</main>

<style>
	main{
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 50px;
		width: 1200px;
		padding: 20px;
	}
	header{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: left;
		color: var(--segundary-color);
		border-radius: 10px;
	}
	.container_herbs{
		width: 100%;
		margin-top: 30px;
	}
	.box_herbs{
		z-index: 1;
		position: relative;
		display: flex;
		align-items: center;
		justify-content: left;
		height: 90px;
		width: 700px;
		border-radius: 60px;
		overflow: hidden;
	}
	.box_herbs::before{
		z-index: 2;
		position: absolute;
		content: "";
		width: 100%;
		height: 100%;
		background-color: #3b3b3b71;
	}
	.herbs_tittle{
		z-index: 3;
		position: absolute;
		margin-left: 15px;
		color: var(--white-color);
	}
	.herbs{
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	.heading{
		display: flex;
		justify-content: left;
		align-items: center;
		width: 100%;
		gap: 10px;
	}
	.sub_heading{
		display: flex;
		align-items: center;
		justify-content: right;
		width: 100%;
		gap: 10px;
	}
	span{
		height: 2px;
		width: 150px;
		background-color: var(--grey-color);
	}
</style>