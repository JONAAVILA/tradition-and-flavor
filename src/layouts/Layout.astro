<style is:global >
	@font-face {
		font-family: 'Poppins-BoldItalic';
		src: url('../assets/Poppins-BoldItalic.ttf') format('truetype');
	}
	@font-face {
		font-family: 'Poppins-LightItalic';
		src: url('../assets/Poppins-LightItalic.ttf') format('truetype');
	}
	@font-face {
		font-family: 'Poppins-Regular';
		src: url('../assets/Poppins-Regular.ttf') format('truetype');
	}
	:root{
		--white-color:#EEF8FF;
		--grey-color:#3A3A3A;
		--ligth-grey-color:#3a3a3aa2;
		--green-color:#297777;
		--ligth-green-color:#CBDBDB;

		margin: 0;
		display: grid;
		align-items: center;
		justify-content: center;
		margin-left: -5px;
		height: 100vh;
		
	}
	:root::-webkit-scrollbar{
   		width: 5px;
	}
	:root::-webkit-scrollbar-thumb{
		background-color: var(--ligth-green-color);
	}
	body{
		margin: 0;
		width: 99.5vw;
		height: 100%;
		background-color: var(--white-color);
		color: var(--grey-color);
		font-family:'Poppins-Regular', sans-serif ;
	}
	h1{
		font-family:'Poppins-BoldItalic',sans-serif ;
		font-size: 5rem;
		line-height: 1;
		margin: 0;
	}
	h2{
		font-family:'Poppins-LightItalic',sans-serif ;
		font-size: 3rem;
		font-weight: 100;
		margin: 0;
		line-height: 1;
	}
	h3{
		font-family:'Poppins-LightItalic',sans-serif ;
		font-size: 1.5rem;
		font-weight: 200;
		margin: 0;
		line-height: 1;
	}
	a{
		color: var(--grey-color);
		font-size: 10px;
		text-decoration: none;
	}
</style>
